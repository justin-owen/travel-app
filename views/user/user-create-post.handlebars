{{#if name}}
    <div class="createPostForm">
        <h1 class="formLabel">Create Post for {{name}}</h1>
        <form action="/user/posts/create/{{name}}" method="post" class="form">
            <input type="hidden" value="{{user.userName}}" name="userName">
            <input type="hidden" value="{{name}}" name="city">
            <p class="locationNameLabel">Location Name: </p>
            <input type="text" name="locationName" placeholder="Enter location name..." style="padding-left: 10px; padding-right: 5px" class="locationNameInput">
            <label for="locationDetails" class="locationDetailsLabel" class="formLabel">Location Details: </label>
            <textarea name="locationDetails" class="locationDetailsInput" cols="100" rows="4" placeholder="Enter the location details..."></textarea>
            <button type="submit" class="submitBtn">Submit</button>
        </form>
    </div>
    {{else}}
        <div class="createPostFormWithCity">
            <h1 class="formLabel">Create Post</h1>
            <form action="/user/posts/create" method="post" class="formWithCity">
                <input type="hidden" name="userName" value="{{user.userName}}">
                <label for="city" class="cityLabel">City: </label>
                <select name="city" id="citySelect" class="cityInput">
                    {{#each cities}}
                        <option value="{{name}}">{{name}}</option>
                    {{/each}}
                </select>
                <label for="locationName" class="locationNameLabel">Location Name: </label><input type="text" name="locationName" placeholder="Enter location name..." style="padding-left: 10px; padding-right: 5px" class="locationNameInput">
                <label for="locationDetails" class="locationDetailsLabel">Location Details: </label><textarea name="locationDetails" id="locationDetails" cols="60" rows="20" class="locationDetailsInput" placeholder="Enter the location Details..."></textarea>
                <button type="submit" class="submitBtn">Submit</button>
            </form>
        </div>
    
{{/if}}