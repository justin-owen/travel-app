<div class="wrapper login">
    <span class="icon-close material-symbols-outlined">close</span>
    <div class="form-box login">
        <h2>Login</h2>
        {{#if errors}}
            {{#each errors}}
                <div class="alert">
                    {{message}}
                </div>
            {{/each}}
        {{/if}}

        <form action="/login" method="post">
            <div class="input-box">
                <span class="icon material-symbols-outlined">mail</span>
                <input type="email" name="email">
                <label for="email">Email</label>
            </div>
            <div class="input-box">
                <span class="icon material-symbols-outlined">lock</span>
                <input type="password" name="password">
                <label for="password">Password</label>
            </div>
            <button type="submit" class="form-button">Login</button>
            <div class="login-register">
                <p>Don't have an account? <a class="register-link" href="/register">Register</a></p>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="carousel">
        <div class="slider">
            <section class="popular-regions" id="europe">
                <h1>Europe</h1>
                <button>Select</button>
            </section>
            <section class="popular-regions" id="asia">
                <h1>Asia</h1>
                <button>Select</button>
            </section>
            <section class="popular-regions" id="oceania">
                <h1>Oceania</h1>
                <button>Select</button>
            </section>
            <section class="popular-regions" id="na">
                <h1>North America</h1>
                <button>Select</button>
            </section>
        </div>
        <div class="controls">
            <span class="material-symbols-outlined arrow left">arrow_back_ios</span>
            <span class="material-symbols-outlined arrow right">arrow_forward_ios</span>
        </div>
    </div>
</div>
<script src="/js/login-registration-links.js"></script>