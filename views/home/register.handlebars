<div class="wrapper register">
    <span class="icon-close material-symbols-outlined">close</span>
    <div class="form-box register">
        <h2>Register</h2>
        {{#if errors}}
            {{#each errors}}
                <div class="alert alert-danger">
                    {{message}}
                </div>
            {{/each}}
        {{/if}}
        <form action="/register" method="post">
            <div class="input-box">
                <span class="icon material-symbols-outlined">person</span>
                <input type="text" name="firstName">
                <label for="firstname">First Name</label>
            </div>
            <div class="input-box">
                <span class="icon material-symbols-outlined">person</span>
                <input type="text" name="lastName">
                <label for="lastname">Last Name</label>
            </div>
            <div class="input-box">
                <span class="icon material-symbols-outlined">person</span>
                <input type="text" name="userName">
                <label for="username">Username</label>
            </div>
            <div class="input-box">
                <span class="icon material-symbols-outlined">mail</span>
                <input type="email" name="email">
                <label for="email">Email</label>
            </div>
            <div class="input-box">
                <span class="icon material-symbols-outlined">lock</span>
                <input type="password" name="password">
                <label for="password">Password</label>
            </div>
            <button type="submit" class="form-button">Register</button>
            <div class="login-register">
                <p>Have an account? <a class="login-link" href="/login">Login</a></p>
            </div>
        </form>
    </div>
</div>
<div class="container">
    <div class="carousel">
        <div class="slider">
            <section class="popular-regions" id="europe">
                <h1>Europe</h1>
                <button>Select</button>
            </section>
            <section class="popular-regions" id="asia">
                <h1>Asia</h1>
                <button>Select</button>
            </section>
            <section class="popular-regions" id="oceania">
                <h1>Oceania</h1>
                <button>Select</button>
            </section>
            <section class="popular-regions" id="na">
                <h1>North America</h1>
                <button>Select</button>
            </section>
        </div>
        <div class="controls">
            <span class="material-symbols-outlined arrow left">arrow_back_ios</span>
            <span class="material-symbols-outlined arrow right">arrow_forward_ios</span>
        </div>
    </div>
</div>
<script src="/js/login-registration-links.js"></script>